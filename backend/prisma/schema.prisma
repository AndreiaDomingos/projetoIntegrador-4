datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lembrete {
  id           Int      @id @default(autoincrement())
  nome         String
  idade        Int
  notificacao  Boolean
  telefone     String?
  email        String?
  medicamento  String


  doseUnidade  String
  doseValor    Float

  usoContinuo Boolean
  dias        Int
  usoInicio   DateTime?
  intervalo   Float
  horario      String  
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}